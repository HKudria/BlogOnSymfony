{% extends 'layouts/layout.html.twig' %}
{% block title %}{{post.title}}{% endblock %}
{% block content %}

    <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header"><h2>{{post.title}}</h2></div>
                    <div class="card-body">
                        <div class="card-img card-img-max" style="background-image: url({{ asset('uploads/posts/' ~ post.img)}})"></div>
                        <div class="card-author">Post napisano dnia: {{post.createdAt}}</div>
                        <p class="card-text c">{{post.descr}}</p>
                        <a href="{{path('post_index')}}" class="btn btn-outline-primary">Main page</a>
                        {% if is_granted('ROLE_USER') %}
                                <a href="{{path('post_edit',{'id' : post.id}) }}" class="btn btn-outline-success">Edit post</a>
                                <a href="{{ path('post_delete', {'id':post.id ,csrf_token:'delete-item'}) }}" class="btn btn-outline-success" onclick="return confirm('are u sure?')">delete</a>
                        {% endif %}
                    </div>


                </div>
            </div>
    </div>

{% endblock %}
