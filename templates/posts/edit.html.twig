
{% extends 'layouts/layout.html.twig' %}
{% block title %}{{ 'post.editPost'|trans }}{% endblock %}
{% block content %}


<h3>{{ 'post.editPost'|trans }}</h3>

{{ form_start(form) }}
<div class="form-group">
    {{ form_row(form.title) }}
</div>
<div class="form-group">
    {{ form_row(form.descr) }}
</div>
<div class="form-group">
    {{ form_row(form.img) }}
</div>

<input type="submit" value="{{ 'post.editButton'|trans }}" class="btn btn-outline-primary">
    {{ form_end(form) }}
{% endblock %}
