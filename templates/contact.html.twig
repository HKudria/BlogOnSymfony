
{% extends 'layouts/layout.html.twig' %}
{% block title %}{{ 'contactForm.title'|trans }}{% endblock %}
{% block content %}


<h2>{{'contactForm.h2message'|trans}} </h2>
    <div class="blog">
    <div class="col-6">
        <div class="mapouter">
            <div class="gmap_canvas"><iframe height="524" width="100%" id="gmap_canvas" src="https://maps.google.com/maps?q=pozna%C5%84&t=&z=13&ie=UTF8&iwloc=&output=embed" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"></iframe><br>
                <style>.mapouter{position:relative;text-align:right;height:auto;width:100%;}</style>
                <style>.gmap_canvas {overflow:hidden;background:none!important;height:auto;width:100%;}</style>
            </div>
        </div>
    </div>
        <div class="col-6">
            <div class="contact">
                <p>{{'contactForm.mainMessage'|trans}}</p>
                <h1>{{'contactForm.data'|trans}}</h1>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">{{'contactForm.phone'|trans}}: <a href="tel:+48000000000">777-777-777</a></li>
                    <li class="list-group-item">{{'contactForm.email'|trans}}: <a href="mailto:hermanwebmasterpl@gmail.com">hermanwebmasterpl@gmail.com</a></li>
                    <li class="list-group-item">{{'contactForm.addres'|trans}}: os. Osiedlowe 20 Pozna≈Ñ 60-000</li>
                    <li class="list-group-item"><a href="https://www.facebook.com/profile.php?id=100069855155823"><img class="bd-placeholder-img" src="{{asset('/img/facebook.png')}}" width="24" height="24"></img></a></li>
                </ul>
            </div>

        </div>
    </div>

    {{ form_start(form) }}
    {% if form_errors(form.phone) or form_errors(form.email) %}
        <br>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            {{ form_errors(form.phone) }}
            {{ form_errors(form.email) }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
            </button>
        </div>
    {% endif %}
    <div class="form-group">
        {{ form_row(form.name) }}
    </div>
    <div class="form-group">
        {{ form_label(form.phone) }}
        {{ form_widget(form.phone) }}
    </div>
    <div class="form-group">

        {{ form_label(form.email) }}*
        {{ form_widget(form.email) }}
    </div>
    <div class="form-group">
        {{ form_row(form.message) }}
    </div>
    <div class="form-group">
        {{ form_row(form.check) }}
    </div>
    <input type="submit" value="{{ 'contactForm.sendButton'|trans }}" class="btn btn-outline-primary">
    {{ form_end(form) }}
<p><em>{{ 'contactForm.notice'|trans }}</em></p>
{% endblock %}


